* 
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.nav
  width 150px
  height 100%
  min-width 150px
  background-color #2c3e50
  padding 20px 16px
  box-shadow 2px 0 5px rgba(0, 0, 0, 0.2)
  border-radius 8px
  box-sizing border-box

.nav ul
  list-style none
  padding 0
  margin 0

.nav ul li
  margin-bottom 15px

.nav ul li:last-child
  margin-bottom 0

.nav ul li a
  text-decoration none
  color #ecf0f1
  font-size 16px
  font-weight normal
  display block
  padding 10px 15px
  border-radius 4px
  transition background-color 0.3s ease, color 0.3s ease

.nav ul li a:hover
  background-color #34495e
  color #1abc9c

.nav ul li .active
  background-color #1abc9c
  color #ecf0f1
  font-weight 600
