.imageContainer
  flex 1
  display flex
  justify-content flex-end
  align-items flex-start

.cocktailImage
  width 100%
  max-width 200px
  height auto
  border 1px solid #ccc
  border-radius 10px
  box-shadow 0 4px 6px rgba(0, 0, 0, 0.1)

@media (max-width: 500px)
  .imageContainer
    display none
